{
  "name": "evo-theme",
  "version": "1.0.0",
  "description": "Evo - Modern Shopify Theme Development Environment",
  "type": "module",
  "scripts": {
    "dev": "vite build --watch --mode development",
    "build": "vite build --mode production",
    "preview": "vite preview",
    "lint": "eslint src --ext .js,.ts,.jsx,.tsx",
    "lint:fix": "eslint src --ext .js,.ts,.jsx,.tsx --fix",
    "type-check": "tsc --noEmit",
    "backup": "node dev/backup-original.js",
    "setup": "npm run backup && npm install"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-shopify": "^2.0.0",
    "@rollup/plugin-alias": "^5.0.0",
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "rollup-plugin-terser": "^7.0.0"
  },
  "dependencies": {
    "alpinejs": "^3.13.0",
    "aos": "^2.3.4",
    "axios": "^1.6.0",
    "flickity": "^3.0.0",
    "flickity-fade": "^2.0.0",
    "micromodal": "^0.4.10",
    "rellax": "^1.12.1",
    "scroll-lock": "^2.1.5"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
