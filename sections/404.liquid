<!-- /sections/404.liquid -->
{%- comment -%}
  Evo Theme - 404 Error Page
{%- endcomment -%}

<div class="{{ section.settings.width }} section-padding"
  style="--PT: {{ section.settings.padding_top }}px; --PB: {{ section.settings.padding_bottom }}px;">
  <div class="float-grid">
    <div class="grid__item medium-up--two-thirds medium-up--push-one-sixth">
      <div class="evo-404-wrapper">
        {%- assign heading_404 = settings['404_heading'] | default: '' -%}
        <h1 class="title text-center">{% if heading_404 != blank %}{{ heading_404 }}{% else %}{{ 'general.404.title' | t }}{% endif %}</h1>
        {%- assign text_404 = settings['404_text'] | default: '' -%}
        <p class="text-center evo-404-text">{% if text_404 != blank %}{{ text_404 }}{% else %}{{ 'general.404.subtext_html' | t }}{% endif %}</p>
        
        {%- if section.settings.show_button -%}
          <div class="text-center evo-404-actions" 
            style="margin-top: {{ section.settings.button_spacing }}px;">
            {%- assign button_link_404 = settings['404_button_link'] | default: '' -%}
            <a href="{% if button_link_404 != blank %}{{ button_link_404 }}{% else %}{{ routes.root_url }}{% endif %}" class="btn {{ section.settings.button_style }}">
              {%- assign button_text_404 = settings['404_button_text'] | default: '' -%}
              {% if button_text_404 != blank %}{{ button_text_404 }}{% elsif section.settings.button_text != blank %}{{ section.settings.button_text }}{% else %}Continue Shopping{% endif %}
            </a>
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
	"name": "404 Page",
	"settings": [
		{
			"type": "header",
			"content": "Layout Settings"
		},
		{
			"type": "select",
			"id": "width",
			"label": "Section width",
			"default": "wrapper",
			"options": [
				{
					"value": "wrapper--full",
					"label": "Full width padded"
				},
				{
					"value": "wrapper",
					"label": "Page width"
				},
				{
					"value": "wrapper--narrow",
					"label": "Narrow width"
				}
			]
		},
		{
			"type": "range",
			"id": "padding_top",
			"min": 0,
			"max": 180,
			"step": 4,
			"unit": "px",
			"label": "Top padding",
			"default": 60
		},
		{
			"type": "range",
			"id": "padding_bottom",
			"min": 0,
			"max": 180,
			"step": 4,
			"unit": "px",
			"label": "Bottom padding",
			"default": 60
		},
		{
			"type": "header",
			"content": "Button Settings"
		},
		{
			"type": "checkbox",
			"id": "show_button",
			"label": "Show return button",
			"default": true
		},
		{
			"type": "text",
			"id": "button_text",
			"label": "Button text",
			"default": "Continue Shopping"
		},
		{
			"type": "select",
			"id": "button_style",
			"label": "Button style",
			"default": "btn--primary",
			"options": [
				{
					"value": "btn--primary",
					"label": "Primary"
				},
				{
					"value": "btn--secondary",
					"label": "Secondary"
				},
				{
					"value": "btn--black",
					"label": "Black"
				},
				{
					"value": "btn--white",
					"label": "White"
				},
				{
					"value": "btn--neutral",
					"label": "Neutral"
				},
				{
					"value": "btn--invert",
					"label": "Invert"
				},
				{
					"value": "btn--soft",
					"label": "Soft"
				}
			]
		},
		{
			"type": "range",
			"id": "button_spacing",
			"min": 0,
			"max": 80,
			"step": 4,
			"unit": "px",
			"label": "Button top spacing",
			"default": 32
		}
	]
}
{% endschema %}